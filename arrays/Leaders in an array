class Solution{
    //Function to find the leaders in the array.
    static ArrayList<Integer> leaders(int arr[], int n){
  ArrayList<Integer> ans = new ArrayList<>();
        int max = arr[n-1];
        
        for(int i=n-1;i>=0;i--)
        {
            if(arr[i]>=max)
            {
                max=arr[i];
                ans.add(max);
            }
        }
        Collections.reverse(ans);
        return ans;
    }
}
